= form_for @character do |f|
  - if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :life_points
    = f.number_field :life_points
  .field
    = f.label :attack_points
    = f.number_field :attack_points
  .actions
    = f.submit 'Save'
